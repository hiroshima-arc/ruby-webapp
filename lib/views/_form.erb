<div class='form-group <%= error_class(task, :name) %>'>
  <label class='col-sm-2 control-label' for='task_name'>タスク名</label>
  <div class='col-sm-10'>
    <input class='form-control' id='task_name' name='name' placeholder='例：買い物' type='text' value='<%= @task.name %>'>
  </div>
</div>
<div class='form-group <%= error_class(task, :content) %>'>
  <label class='col-sm-2 control-label' for='task_name'>タスクの内容</label>
  <div class='col-sm-10'>
    <input class='form-control' id='task_content' name='content' placeholder='例：牛乳を買う' type='text' value='<%= @task.content %>'>
  </div>
</div>
<div class='form-group'>
  <label class='col-sm-2 control-label' for='task_status'>タスクの状態</label>
  <div class='col-sm-10'>
    <select class='form-control' id='task_status' name='status'>
      <%= options_for_task_status(task) %>
    </select>
  </div>
</div>